<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="Border.Card" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Brush.Background.Tint(3.88)}"/>
        <Setter Property="Effect" Value="{DynamicResource SmallShadow}"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <Style x:Key="Border.Divider.Horizontal" TargetType="{x:Type Border}">
        <Setter Property="Height" Value="2"/>
        <Setter Property="Background" Value="{DynamicResource Brush.Text.Shade(25)}"/>
        <Setter Property="CornerRadius" Value="1"/>
        <Setter Property="Effect" Value="{DynamicResource SmallShadow}"/>
    </Style>
    <Style x:Key="Border.Divider.Vertical" TargetType="{x:Type Border}" BasedOn="{StaticResource Border.Divider.Horizontal}">
        <Setter Property="Height" Value="NaN"/>
        <Setter Property="Width" Value="2"/>
    </Style>
</ResourceDictionary>