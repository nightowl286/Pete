<Window x:Class="Pete.Views.Dialogs.GeneralDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pete.Views.Dialogs"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d" WindowStartupLocation="Manual" Title="{Binding Title}">
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="MinWidth" Value="300"/>
            <Setter Property="MinHeight" Value="200"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
            <Setter Property="ShowInTaskbar" Value="{DynamicResource Dialog.ShowInTaskBar}"/>
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="Background" Value="{DynamicResource Brush.Background}"/>
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen"/>
        </Style>
    </Window.Style>
</Window>
